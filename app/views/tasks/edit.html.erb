<h2>Edit Task</h2>


<%if @task.errors.any?%>
  <ul class="error-list">
  <% @task.errors.full_messages.each do |m|%>
    <li><%= m  %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for([@project,@task]) do |f| %>
  <div class="form-group">
    <%= f.label :task %> </br>
    <%= f.text_area :body, class: "form-control", rows: 3 %>
  </div>

  <div>
    <%= f.submit nil,class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back",@project %>