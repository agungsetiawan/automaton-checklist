<% if @project.errors.any? %>
  <ul>
  <% @project.errors.full_messages.each do |m| %>
    <li><%= m %></li>
  <% end %>
  </ul>
<% end%>

<%= form_for(@project) do |f| %>
  <div>
    <%= f.label :name %> <br/>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :date %> <br/>
    <%= f.date_select :date %>
  </div>

  <div>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>